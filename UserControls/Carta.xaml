<UserControl x:Class="JuegoTutorial.UserControls.Carta"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JuegoTutorial.UserControls"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             mc:Ignorable="d" 
             Height="50" Width="37.5">
    <Canvas>
        <Image x:Name="carta" Width="37.5" Height="50" Stretch="Fill" >
            <Image.Effect>
                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0" Opacity="1" />
            </Image.Effect>
        </Image>
    </Canvas>
</UserControl>
